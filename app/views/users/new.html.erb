<%= form_with model: @post do |form| %>
  <%= form.label :username, 'Handle' %>
  <%= form.text_field :username %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: 'email@example.com' %>
  <%= form.label :password %>
  <%= form.password_field :password, placeholder: '******' %>
  <%= form.submit %>
<% end %>
